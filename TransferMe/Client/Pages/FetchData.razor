@page "/fetchdata"
@using Transfer.Me.Shared
@using Transfer.Me.Shared.Models
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (encryptedFiles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in encryptedFiles)
            {
                <tr>
                    <td>@file.FileID</td>
                    <td>@file.FileSize</td>
                    <td>@file.Descript</td>
                    <td>@file.UserID</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private EncryptedFile[] encryptedFiles;

    protected override async Task OnInitializedAsync()
    {
        encryptedFiles = await Http.GetFromJsonAsync<EncryptedFile[]>("EncryptedFile");
    }

}
