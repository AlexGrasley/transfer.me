<MudPaper Width="100%" Class="py-3" Square="true">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">Menu</MudText>
        <MudList>
            <MudListItem>
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/">
                    Home
                </MudNavLink>
            </MudListItem>
            <MudListItem>
                <MudNavLink id="linkProfile" Href="/profile">
                    Profile
                </MudNavLink>
            </MudListItem>
            <MudListItem>
                <MudNavLink id="linkHistory" Href="/history">
                    History
                </MudNavLink>
            </MudListItem>
        </MudList>
    </MudNavMenu>
</MudPaper>

@code {
    private bool collapseMenu = true;

    private string NavMenuCssClass => collapseMenu ? "collapse" : String.Empty;

    private void ToggleNavMenu()
    {
        collapseMenu = !collapseMenu;
    }
}
