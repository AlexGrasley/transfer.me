<MudPaper Height="100%" Width="100%" Class="py-3" Square="true" Style="border:solid; border-color:darkgray; border-width:1px; border-top:none; border-left:none">
    
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">Menu</MudText>
        <MudList>
            <MudListItem>
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/">
                    Home
                </MudNavLink>
            </MudListItem>
            <MudListItem>
                <MudNavLink id="linkProfile" Href="/profile">
                    Profile
                </MudNavLink>
            </MudListItem>
            <MudListItem>
                <MudNavLink id="linkAbout" Href="/about">
                    About
                </MudNavLink>
            </MudListItem>
        </MudList>
    </MudNavMenu>
</MudPaper>

@code {
    private bool collapseMenu = true;

    private string NavMenuCssClass => collapseMenu ? "collapse" : String.Empty;

    private void ToggleNavMenu()
    {
        collapseMenu = !collapseMenu;
    }
}
