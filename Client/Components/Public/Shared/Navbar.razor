<MudPaper Width="250px" Class="py-3" Square="true">
    <MudNavMenu >
        <MudText Typo="Typo.h6" Class="px-4">Menu</MudText>
        <MudList>
            <MudListItem>
                <MudButton FullWidth Href="/">Home</MudButton>
            </MudListItem>
            <MudListItem>
                <MudButton FullWidth Href="/profile">Profile</MudButton>
            </MudListItem>
            <MudListItem>
                <MudButton FullWidth Href="/history">History</MudButton>
            </MudListItem>
        </MudList>
    </MudNavMenu>
</MudPaper>

@code {
    private bool collapseMenu = true;

    private string NavMenuCssClass => collapseMenu ? "collapse" : String.Empty;

    private void ToggleNavMenu()
    {
        collapseMenu = !collapseMenu;
    }
}
