<MudDialog Style="width=60%">
    <DialogContent>
        Download Link: <MudLink Href=@url> Download </MudLink> 
        <br />
        Download URL: <MudTextField @bind-Value=@copyURL/>
        Key: <MudTextField @bind-Value=@Pages.Index.fileDescriptor.KeyString/>
        </DialogContent>
    <DialogActions>
     <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code{
    string url = "/download/" + Pages.Index.fileDescriptor.FileID;
    string copyURL = "http://transferme.azurewebsites.net" + "/download/" + Pages.Index.fileDescriptor.FileID;
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}	