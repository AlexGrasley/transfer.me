@inherits LayoutComponentBase
<MudThemeProvider Theme="currentTheme" @bind-IsDarkMode="_isDarkMode"/>
<MudLayout> 
    @* This is a base layout that includes the Appbar, and the navigation menu *@
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Transfer.Me</MudText>
        @*IF I remove this, the icons are on the left for some reason. Don't understand. TODO*@
        <MudContainer />
        @if (!_isDarkMode) {
           <MudIconButton Color="Color.Secondary" Size="Size.Large" Icon="@Icons.Material.Filled.LightMode" Edge="Edge.Start" OnClick="@((e) => DarkMode())">Toggle Dark Mode</MudIconButton>
        }
        else {
            <MudIconButton Color="Color.Secondary" Size="Size.Large" Icon="@Icons.Material.Filled.DarkMode" Edge="Edge.Start" OnClick="@((e) => DarkMode())">Toggle Light Mode</MudIconButton>
        }
        <MudIconButton Color="Color.Secondary" Size="Size.Large" Icon="@Icons.Material.Filled.Person" Edge="Edge.Start" Link="/profile" />
    </MudAppBar>
    <MudDrawer Height="30%" Open ClipMode="DrawerClipMode.Always" Elevation="0">
        <Client.Components.Public.Shared.Navbar/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>  
    <Client.Components.Public.Shared.Footer />
</MudLayout>




@code {
    MudTheme currentTheme = new();
    bool _isDarkMode = false;
    void DarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

}
