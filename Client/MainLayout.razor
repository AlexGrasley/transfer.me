@inherits LayoutComponentBase

<MudLayout Style="padding-bottom:10%"> 
    @* This is a base layout that includes the Appbar, and the navigation menu *@
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Transfer.Me</MudText>
        @*IF I remove this, the icons are on the left for some reason. Don't understand. TODO*@
        <MudContainer />
        @if (userSignedIn) //Some logic to check if a user is signed in.Make profile icon direct to sign in if not signed in
        {
            <MudIconButton Style="color: #B0B3B8" Size="Size.Large" Icon="@Icons.Material.Filled.Person" Edge="Edge.Start" Link="/profile" />    
        }
        else
        {
            <MudIconButton Style="color: #B0B3B8" Size="Size.Large" Icon="@Icons.Material.Filled.Person" Edge="Edge.Start" Link="/signin" />
        }
        
    </MudAppBar>
    <MudDrawer Height="30%" Open ClipMode="DrawerClipMode.Always" Elevation="0">
        <Client.Components.Navbar/>
    </MudDrawer>
    <MudMainContent Style="padding-right:15%">
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>  
    <Client.Components.Footer />
</MudLayout>




